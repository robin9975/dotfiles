[user]
	name = Robin Hoogervorst
	email = robin@dare2plan.nl

[push]
	default = simple

[core]
	excludesfile = /home/robin/.gitignore_global
    pager = delta

[interactive]
    diffFilter = delta --color-only

[delta]
    navigate = true
    side-by-side = true

[credential]
	helper = cache --timeout 30000

[merge]
    conflictstyle = diff3
[init]
	defaultBranch = master
